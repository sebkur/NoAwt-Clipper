<project name="NoAWT-Clipper" default="compile" basedir=".">

	<description>
		Build file for NoAWT-Clipper
	</description>

	<property name="src" location="src" />
	<property name="build" location="bin" />
	<property name="dist" location="dist" />
	<property name="lib" location="lib" />
	<property name="doc" location="javadoc" />

	<target name="init">
		<tstamp />
		<mkdir dir="${build}" />
		<mkdir dir="${dist}" />
	</target>

	<target name="doc">
		<mkdir dir="${doc}" />
		<javadoc sourcepath="${src}" destdir="${doc}">
			<classpath>
				<fileset dir="${lib}">
					<include name="*.jar" />
				</fileset>
			</classpath>
		</javadoc>
	</target>

	<target name="compile" depends="init" description="compile the source ">
		<javac srcdir="${src}" destdir="${build}" debug="on" debuglevel="lines,vars,source" includeantruntime="false">
			<classpath>
				<fileset dir="${lib}">
					<include name="*.jar" />
				</fileset>
			</classpath>
		</javac>
	</target>

	<path id="build-classpath">
		<fileset dir="${lib}">
			<include name="**/*.jar" />
		</fileset>
	</path>

	<target name="dist" depends="dist-binary, dist-sources" />

	<target name="dist-binary" depends="compile" description="generate the distribution">
		<jar jarfile="${dist}/noawt-clipper.jar" basedir="${build}">
			<fileset dir="." includes="com.bric.License.html"/>
		</jar>
	</target>

	<target name="dist-sources" depends="compile" description="generate the distribution">
		<jar jarfile="${dist}/noawt-clipper-src.jar" basedir="${src}">
			<fileset dir="." includes="License.html"/>
		</jar>
	</target>

	<target name="clean" description="clean up">
		<delete dir="${build}" />
		<delete dir="${dist}" />
		<delete dir="${doc}" />
	</target>
	
</project>
